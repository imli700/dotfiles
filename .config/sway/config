### CUSTOM SETTINGS ###
#######################

#touchpad
input type:touchpad {
tap enabled
natural_scroll enabled
middle_emulation enabled
pointer_accel 0.3 #Changing the pointer speed
}

#sets bar to waybar
bar {
swaybar_command waybar
}

#volume keys
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%

#Brightness
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-
bindsym XF86MonBrightnessUp exec brightnessctl s +5%

# shutdown / restart / suspend...
set $Locker swaylock -i "~/Pictures/wallpapers/moon.jpg", mode "default" #not really necessary but looks cleaner below
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (CTRL+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id swaylock 
    bindsym e exec --no-startup-id swaymsg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend && $Locker
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

#flameshot. In seperate section becaues this is very complicated
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \ dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
bindsym $mod+Shift+s exec flameshot gui

#wayland gtk settings
exec {
    gsettings set $gnome-schema gtk-theme 'Catppuccin-Mocha'
    gsettings set $gnome-schema icon-theme 'Papirus'
#    gsettings set $gnome-schema cursor-theme 'Your cursor Theme'
#    gsettings set $gnome-schema font-name 'Your font name'
}

#wallpaper
output * bg $HOME/Pictures/wallpapers/green-scene.jpg fit

#application startup
exec mako
exec sleep 4s && megasync #megasync works properly if opened after a few seconds after startup
exec nm-applet --indicator
exec powerprofilesctl set power-saver
output eDP-1 mode 1920x1080@48.014Hz position 0,0

#system statups
exec pactl set-source-mute @DEFAULT_SOURCE@ toggle # mutes microphone on startup
exec pactl set-sink-volume @DEFAULT_SINK@ 50% #sets volume to 50 on startup
exec pactl set-sink-mute @DEFAULT_SINK@ toggle #mutes volume on startup
